<!-------------------below is the error handling / show section ------------------>
<% if @article.errors.any? %>
<h2>The following error need attention : </h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
  
<% end %>

<!-------------------above are the errors------------------>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :title %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title for the Article", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :description %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :title, rows: 20, class: "form-control", placeholder: "Description for the Article" %>
      </div>
      
    </div>
    
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
       <%= f.submit class: "btn btn-primary" %> 
      </div>
    </div>
    
    <% end %>
    <div class="col-md-offset-2">
      [ <%= link_to "Cancel and Return to Articles List", articles_path %> ]
    </div>
    
  </div>
</div>
